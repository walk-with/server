{
   "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "pretty": true,
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": "./src",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "target": "es6",
      "typeRoots": [
         "node_modules/@types"
      ]
   },
   "lib": [
      "es2015"
   ],
   "include": [
      "src/**/*.ts"
   ],
   "exclude": [
      "node_modules"
   ]
}